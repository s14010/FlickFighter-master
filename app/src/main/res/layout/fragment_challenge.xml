<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context="jp.ac.it_college.std.flickfighter.ChallengeFragment">

    <ImageSwitcher
        android:id="@+id/challenge_clear1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/challenge1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="３分以内にクリア！！"
        android:padding="20dp"
        android:layout_below="@id/result_clear_text"
        android:layout_toRightOf="@id/challenge_clear1"
        android:background="@drawable/stone_wall"
        android:layout_marginTop="50dp" />

    <ImageSwitcher
        android:id="@+id/challenge_clear2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/challenge_clear1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/challenge2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ノーダメクリア！！"
        android:padding="20dp"
        android:background="@drawable/stone_wall"
        android:layout_below="@+id/challenge1"
        android:layout_toRightOf="@id/challenge_clear2"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/okane"
        android:padding="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/challenge2"
        android:layout_alignEnd="@+id/challenge2"
        android:layout_alignLeft="@+id/challenge2"
        android:layout_alignStart="@+id/challenge2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/challenge_clear2"
        android:layout_alignStart="@+id/challenge_clear2" />

</RelativeLayout>
