<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.it_college.std.flickfighter.Character">


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/character1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f001"
                android:text="あいうえお" />

            <ImageButton
                android:id="@+id/character2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f002"
                android:text="かきくけこ" />

            <ImageButton
                android:id="@+id/character3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f003"
                android:text="さしすせそ" />

            <ImageButton
                android:id="@+id/character4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f004"
                android:text="たちすてと" />

            <ImageButton
                android:id="@+id/character5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f005"
                android:text="なにぬねの" />

            <ImageButton
                android:id="@+id/character6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f101"
                android:text="はひふへほ" />

            <ImageButton
                android:id="@+id/character7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f102"
                android:text="あいうえお" />

            <ImageButton
                android:id="@+id/character8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f103"
                android:text="かきくけこ" />

            <ImageButton
                android:id="@+id/character9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f104"
                android:text="さしすせそ" />

            <ImageButton
                android:id="@+id/character10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f105"
                android:text="たちすてと" />

            <ImageButton
                android:id="@+id/character11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f301"
                android:text="なにぬねの" />

            <ImageButton
                android:id="@+id/character12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/f302"
                android:text="はひふへほ" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll"
        android:textSize="60dp" />

</RelativeLayout>
