<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ステータス"
        android:textSize="35dp"
        android:layout_above="@+id/gridlayout_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:id="@+id/gridlayout_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        android:layout_above="@+id/point_view_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp">

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:src="@drawable/player"
            android:background="@drawable/simple_frame"
            />


        <TextView
            android:layout_width="405dp"
            android:layout_height="65dp"
            android:gravity="center_horizontal"
            android:text="Status"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="67dp"
            android:gravity="center_horizontal"
            android:text="Attack"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:id="@+id/status_attack_level"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/simple_frame"
            />


        <TextView
            android:layout_width="150dp"
            android:layout_height="67dp"
            android:gravity="center_horizontal"
            android:text="Life"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/simple_frame"
            />

        <TextView
            android:id="@+id/status_life_level"
            android:layout_width="250dp"
            android:layout_height="67dp"
            android:gravity="center_horizontal"
            android:layout_column="2"
            android:layout_row="3"
            android:textSize="20dp"
            android:textColor="#000"
            android:background="@drawable/simple_frame"
            />


    </GridLayout>

    <ImageButton
        android:id="@+id/button_character"
        android:layout_width="185dp"
        android:layout_height="150dp"
        android:text="キャラ選択"
        android:background="@drawable/kyara"
        android:soundEffectsEnabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />


    <ImageButton
        android:id="@+id/button_stage_select"
        android:layout_width="185dp"
        android:layout_height="150dp"
        android:text="ステージ選択"
        android:background="@drawable/dannzyon"
        android:soundEffectsEnabled="false"
        android:layout_alignTop="@+id/button_character"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button_gatya"
        android:layout_width="185dp"
        android:layout_height="150dp"
        android:text="ガチャ"
        android:soundEffectsEnabled="false"
        android:background="@drawable/gatya"
        android:layout_alignTop="@+id/button_stage_select"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/point_view_label"
        android:text="0"
        android:textSize="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>